
@{
    ViewBag.Title = "Lead";
}


<style>
    table.dataTable {
        border-collapse: collapse !important;
    }
</style>


<div class="page-header card">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <i class="fa fa-file-excel-o bg-c-blue"></i>
                <div class="d-inline">
                    <h5>Lead Master Data</h5>
                    <span>Lead Master data goes here</span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class=" breadcrumb breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Admin","Dashboard")"><i class="feather icon-home"></i></a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#!">Admin Module</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#!">Lead Master Data</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="pcoded-inner-content">

    <div class="main-body">
        <div class="page-wrapper">

            <div class="page-body">
                <div class="card">
                    <div class="card-header">
                        <div class="col-xl-3 m-b-30">
                            <button class="btn btn-primary waves-effect waves-light btn-sm load" data-toggle="modal" data-target="#large-Modal"><i class="feather icon-plus"></i> Load Data</button>
                        </div>
                        <div class="col-xl-3 m-b-30">
                            <h4 class="sub-title">Lead Type</h4>
                            <select name="select" class="form-control form-control-primary fill" id="leadTypeddl">
                                <option value="">Select</option>
                                @foreach (var item in ViewBag.LeadTypesList)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                        <div class="card-header-right">
                            <ul class="list-unstyled card-option">
                                <i class="feather icon-chevron-left open-card-option"></i></li>
                                <li><i class="feather icon-maximize full-card"></i></li>
                                <li><i class="feather icon-minus minimize-card"></i></li>
                                <li><i class="feather icon-refresh-cw reload-card" id="tblLead-refresh"></i></li>
                                <li><i class="feather icon-chevron-left open-card-option"></i></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-block">
                        <div class="dt-responsive table-responsive">
                            <table id="tblLeads" class="table table-striped table-bordered nowrap" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>SNo.</th>
                                        <th>Lead Type</th>
                                        <th>Phone No</th>
                                        <th>Created At</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>SNo.</th>
                                        <th>Lead Type</th>
                                        <th>Phone No</th>
                                        <th>Created At</th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div id="styleSelector">
    </div>
</div>


<div class="modal fade" id="large-Modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Load Data</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("UploadMasterData", "Admin", FormMethod.Post, new {enctype = "multipart/form-data" }))
                {
                <div class="row">
                    <div class="col-md-6">
                        <h4 class="sub-title">Lead Type</h4>
                        <select class="form-control form-control-primary fill" name="LeadTypeId" required>
                            <option value="">Select</option>
                            @foreach (var item in ViewBag.LeadTypesList)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-6 m-t-50">
                        <div class="fallback">
                            <input name="MasterLoadFile" type="file" accept="text/plain" required/>
                        </div>
                    </div>
                    <div class="col-md-12 text-center m-t-20">
                        <button type="submit" class="btn btn-primary">Upload</button>
                    </div>
                </div>
                   
                }
                </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script type="text/javascript">
        $(document).ready(function (e) {
            loadDataTable();
        });
        $('#tblLead-refresh').click(function (e) {
            loadDataTable();
        });
        $('#leadTypeddl').change(function (e) {
            loadDataTable();
        })
        function loadDataTable() {
            var leadTypeId = $('#leadTypeddl').val();
            if (leadTypeId == "") {
                leadTypeId = null;
            }
            $('#tblLeads').DataTable({
                'responsive': false,
                'autoWidth': true,
                "bDestroy": true,
                "iDisplayLength": 10,
                "ajax": "/Admin/LeadMasterDataGrid?leadTypeId=" + leadTypeId,
                "columns": [
                    { "data": "SNo" },
                    { "data": "LeadType" },
                    { "data": "Phone" },
                    { "data": "CreatedAt" },
                    { "data": "EditBtn" }
                ],
            });
        }

        $('.add').click(function (e) {
            swal({
                title: "Add Lead Type",
                text: "Lead Type",
                type: "input",
                showCancelButton: true,
                closeOnConfirm: false,
                showLoaderOnConfirm: true,
                inputPlaceholder: "Lead Type",
            }, function (inputValue) {
                if (inputValue === false)
                    return false;
                if (inputValue === "" || parseInt(inputValue) === 0) {
                    swal.showInputError("Lead Type is required");
                    return false;
                }
                    addEditLeadType(0, inputValue)
            });
        });

        $(document).on("click", "#tblLeadTypes tbody tr td button.btnedit", function () {
            var id = $(this).data('id');
            var leadType = $(this).data('lead');
            swal({
                title: "Edit Lead Type",
                text: "Lead Type",
                type: "input",
                showCancelButton: true,
                closeOnConfirm: false,
                showLoaderOnConfirm: true,
                inputPlaceholder: "Lead Type",
                inputValue: leadType
            }, function (inputValue) {
                if (inputValue === false)
                    return false;
                if (inputValue === "" || parseInt(inputValue) === 0) {
                    swal.showInputError("Lead Type is required");
                    return false;
                }
                addEditLeadType(id, inputValue)
            });
        });

        function addEditLeadType(id,leadType) {
            $.ajax({
                url: '@Url.Action("AddEditLeadType", "Admin")',
                type: 'post',
                datatype: "json",
                data: {
                    id: id,
                    leadType: leadType
                },
                success: function (data) {
                    if (data.length > 0) {
                        swal("Error!", data, "error");
                    } else {
                        loadDataTable();
                        if (id == 0) {
                            swal("Done!", "Lead Type Added Successfully.", "success");
                        } else {
                            swal("Done!", "Lead Type Updated Successfully.", "success");
                        }
                    }
                },
                error: function (jqXhr, textStatus, errorThrown) {
                    alert(errorThrown);
                }
            });
        }
    </script>
}